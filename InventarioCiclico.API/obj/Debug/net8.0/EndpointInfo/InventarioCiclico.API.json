{
  "openapi": "3.0.1",
  "info": {
    "title": "Inventário Cíclico API",
    "description": "API REST para gerenciamento de empresas com .NET, EF Core e Oracle.",
    "version": "1"
  },
  "paths": {
    "/api/v1/empresas": {
      "get": {
        "tags": [
          "Empresa"
        ],
        "summary": "Retorna a lista de empresas cadastradas.",
        "operationId": "ListarEmpresas",
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Empresa"
        ],
        "summary": "Cria uma nova empresa no sistema.",
        "operationId": "InserirEmpresa",
        "requestBody": {
          "description": "Objeto contendo os dados necessários para o cadastro da empresa.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InsereEmpresaDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/InsereEmpresaDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/InsereEmpresaDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "201": {
            "description": "Empresa criada com sucesso."
          },
          "400": {
            "description": "Dados inválidos enviados na requisição."
          },
          "409": {
            "description": "Empresa já cadastrada na base."
          },
          "500": {
            "description": "Erro interno no servidor."
          }
        }
      }
    },
    "/api/v1/empresas/{id}": {
      "get": {
        "tags": [
          "Empresa"
        ],
        "summary": "Retorna uma empresa pelo ID informado.",
        "operationId": "ObterEmpresaPorId",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da empresa a ser consultada.",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "InsereEmpresaDto": {
        "type": "object",
        "properties": {
          "empresaId": {
            "type": "string",
            "nullable": true
          },
          "razaoSocial": {
            "type": "string",
            "nullable": true
          },
          "cgc": {
            "type": "string",
            "nullable": true
          },
          "endereco": {
            "type": "string",
            "nullable": true
          },
          "telefone": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "JWT Authorization header using the Bearer scheme",
        "scheme": "bearer"
      }
    }
  }
}